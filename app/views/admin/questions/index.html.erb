<div class="row">
  <div class="col-md-9">
    <div class="row">
      <h2>
        <%= t "user.question.all" %>
        <%= link_to "", new_admin_question_path,
          class: "pull-right glyphicon glyphicon-plus-sign" %>
      </h2>

      <table class="table table-hover">
        <thead class="thead-inverse">
          <tr>
            <th><%= sort_link @search, :id, "#" %></th>
            <th><%= sort_link @search, :content, t("user.question.question") %></th>
            <th><%= sort_link @search, :subject_id, t("user.question.subject") %></th>
            <th><%= sort_link @search, :question_type, t("user.question.type") %></th>
            <th><%= sort_link @search, :state, t("user.question.state") %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <ul class="questions">
            <%= render @questions %>
          </ul>
        </tbody>
      </table>
    </div>
    <%= will_paginate %>
  </div>
  <div class="col-md-3">
    <h1><%= t ".list_activities" %></h1>
    <ul>
      <% @activities.each do |activity| %>
        <li class="activity"><%= activity.owner.name if activity.owner %>
          <%= render_activity activity %>
          <div class="time-ago"><em><%= time_ago_in_words activity.created_at %></em></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
